@model ConvenientStoreAPI.Models.Product
@using ConvenientStoreAPI.Models

@{
    ViewData["Title"] = "Index";
}

<div class="animated fadeIn">
    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">List Of Product</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Supplier</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product p in ViewData["list"] as List<Product>)
                            {
                                <tr onclick="window.location.href = '@Url.Action("Details", "Product", new { id = p.Id })';">
                                    <td>@p.Name</td>
                                    <td>@p.Cat.Name</td>
                                    <td>@p.Supplier.Name</td>
                                    <td>$@p.Price</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- .animated -->


<div class="clearfix"></div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#bootstrap-data-table-export').DataTable();
    });
</script>
